<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/text_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_black"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_register"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/lato"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHighlight="#4DC350"
        android:textColorHint="#000000"
        android:textColorLink="#4DC350"
        app:layout_constraintTop_toBottomOf="@+id/text_register"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lato"
        android:hint="Full Name"
        android:minHeight="48dp"
        android:textColorHighlight="#4DC350"
        android:textColorHint="#000000"
        android:textColorLink="#4DC350"
        app:layout_constraintTop_toBottomOf="@+id/register_email"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/register_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_name"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lato"
        android:hint="Username"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHighlight="#4DC350"
        android:textColorHint="#000000"
        android:textColorLink="#4DC350"
        app:layout_constraintTop_toBottomOf="@+id/register_name"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_user"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lato"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHighlight="#4DC350"
        android:textColorHint="#000000"
        android:textColorLink="#4DC350"
        app:layout_constraintTop_toBottomOf="@+id/register_user"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/register_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lato"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColorHighlight="#4DC350"
        android:textColorHint="#000000"
        android:textColorLink="#4DC350"
        app:layout_constraintTop_toBottomOf="@+id/register_password"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_confirm"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="21dp"
        android:backgroundTint="#4DC350"
        android:text="Register"
        android:textSize="20dp"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/register_confirm"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/lato_black"
        android:gravity="center_horizontal"
        android:text="Existing User Login"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/register"
        tools:layout_editor_absoluteX="0dp" />

</RelativeLayout>